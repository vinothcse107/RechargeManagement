@model AirnetMVC.DataService.User

@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AirNet Recharge</h2>
<h6>Fast and Secure way to recharge!</h6>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4 class="text-center">Signup and get recharged!</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-lg-6 col-sm-12 text-center">
            <img src="~/Content/images/Signup.jpg" class="img-fluid" style="height:460px" />
        </div>
        <div class="col-lg-6">
            <div class="mt-3 offset-1 div-md-center div-sm-center">
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control border-0 shadow-none border-bottom", @id = "floatingInput", @placeholder = "Username", @required = "true" } })
                    @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label", @for = "floatingInput" })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", @for = "floatingInput" })

                </div><br>
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control border-0 shadow-none border-bottom", @id = "floatingInput2", @placeholder = "Email", @type = "email", @required = "true" } })
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label", @for = "floatingInput2" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @for = "floatingInput2" })

                </div><br>
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control border-0 shadow-none border-bottom", @id = "floatingInput3", @placeholder = "password", @type = "password", @required = "true" } })
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label", @id = "floatingInput3" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @for = "floatingInput3" })
                </div><br>
                <div class="form-floating mb-3">
                    @Html.EditorFor(model => model.MobileNumber, new { htmlAttributes = new { @class = "form-control border-0 shadow-none border-bottom", @id = "floatingInput4", @type = "text", @pattern = "\\d*", @maxlength = "10", @required = "true" } })
                    @Html.LabelFor(model => model.MobileNumber, htmlAttributes: new { @class = "control-label", @for = "floatingInput4" })
                    @Html.ValidationMessageFor(model => model.MobileNumber, "", new { @class = "text-danger", @for = "floatingInput4" })

                </div>

                <br>

                <div class="offset-2">
                    <input type="submit" value="Signup" class="btn text-white me-3" style="background-color: #a435f0" />
                    @Html.ActionLink("Login", "Login", "", htmlAttributes: new { @class = "btn text-white", @style = "background-color: #a435f0" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
