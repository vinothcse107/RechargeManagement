<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/bootstrap")
</head>
<body class="pt-0">
    @* Navbar Section *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <div class="container-fluid">
            <div class="nav-item text-white" style="list-style:none">@Html.ActionLink("AirNet", "ViewPrepaidPlans", "Client", new { area = "" }, new { @class = "navbar-brand" })</div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item text-white">@Html.ActionLink("Prepaid", "ViewPrepaidPlans", "Client","", new { @class = "nav-link" })</li>
                    <li class="nav-item text-white">@Html.ActionLink("PostPaid", "ViewPostpaidPlans", "Client", "" ,new { @class = "nav-link" })</li>
                    <li class="nav-item text-white">@Html.ActionLink("AddOns", "ViewAddonPlans", "Client", "" ,new { @class = "nav-link" })</li>
                    <li class="nav-item text-white">@Html.ActionLink("History", "RechargeHistory", "Recharge", "" ,new { @class = "nav-link" })</li>
                </ul>
                <div class="offset-8">@Html.ActionLink("Logout", "Logout", "Users", "", new { @class = "nav-link text-white" })</div>
            </div>
        </div>
    </nav>

    @*Renders Body*@
<div class="container body-content">
    <div class="h3 fw-bolder">Welcome @Session["username"]!!</div>
    @RenderBody()
    <hr />
    <footer class="text-center blockquote-footer">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application <a href="https://github.com/vinothcse107/AirnetMVC">Project Link !</a></p>
    </footer>
</div>

    @* Load Scripts*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryajax")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
