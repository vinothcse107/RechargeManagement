@model AirnetMVC.DataService.Review

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card w-100">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title">@Session["username"]</h5>
                    <div>
                        <input type="submit" value="Submit" class="link-success lead bg-white border-0" />
                    </div>
                </div>
                <div class="card-text">
                    <div>
                        @Html.EditorFor(model => model.ReviewContent, new { htmlAttributes = new { @class = "form-control shadow-none border-0", @placeholder="Write your message" } })
                        @Html.ValidationMessageFor(model => model.ReviewContent, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        @Html.EditorFor(model => model.ReviewRating, new { htmlAttributes = new { @class = "form-control shadow-none border-0", @type = "number", @max = "5", @placeholder="Enter a value from 1 to 5" } })
                        @Html.ValidationMessageFor(model => model.ReviewRating, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    </div>
}
